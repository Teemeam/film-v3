---
import cameras from '~/lib/cameras';

/* Layouts */
import Layout from '~/layouts/Layout.astro';

/* Components */
import Header from '~/components/Header.astro';
import Nav from '~/components/Nav.astro';
import SubHeading from '~/components/SubHeading.astro';
import Camera from '~/components/Camera.astro';
import Footer from '~/components/Footer.astro';

/* Assets */
import subheading from '~/assets/cameras.svg';
---

<Layout title='Cameras | Teemu Kakko Film Photo Showcase'>
  <!-- Header -->
  <header>
    <Header />
  </header>

  <!-- Navigation -->
  <Nav />

  <main>
    <section>
      <!-- Sub-heading -->
      <SubHeading src={subheading.src} alt='Cameras' />

      <!-- Description -->
      <p class='font-montserrat w-11/12 mx-auto text-center my-xl md:text-base text-sm'>I shoot both 35 mm and 120 film as well as </p>

      <!-- Cameras -->
      <div>
        {cameras.map((camera, i) => <Camera index={i} camera={camera} />)}
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer>
    <Footer />
  </footer>
</Layout>
